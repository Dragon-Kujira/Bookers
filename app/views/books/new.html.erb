<h1>新規投稿</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :本のタイトル %>

  <h4>本文</h4>
  <%= f.text_area :感想 %>

  <%= f.submit '投稿' %>
<% end %>
